<div>This is for homepage</div>
<section id="search" class="search-wrap">
<form action="/search"  class="search-form">
  <input type="search" name="term" placeholder="location" style="width:400px">
    <input class="btn btn-outline-secondary bg-dark text-white" type="submit" value="Search">
</form>
</section>


<section id="find-expert" class="intro">
  <div class="flex-row">
    <h2 class="section-title secondary-border">Find An Expert</h2>
  </div>
  <div class="flex row">
    <div class="container d-flex" style="width: 100%;">
      {{#each tasks as |task|}}
      <div class="card resize">
        <img class="card-img-top" src="{{ task.userImage }}" alt="Card image">
        <div class="card-body">
          <h4 class="card-title">{{ task.name }}</h4>
          <b>Phone:</b>
          <div class="card-text">
            {{ task.phone }}</div>
          <b>email:</b>
          <div class="card-text">
            {{ task.email }}</div>
          <b>Service:</b>
          <div class="card-text">
            {{ task.services }}</div>
          <b>Price:</b>
          <div class="card-text">
            {{ task.price }}</div>
          <b>Location:</b>
          <div class="card-text">
            {{ task.location }}</div>
          <b>username:</b>
          <div class="card-text">
            {{ task.user.username }}</div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

